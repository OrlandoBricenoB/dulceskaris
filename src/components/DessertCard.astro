---
export interface Props {
  name: string;
  description: string;
  image: string;
  price: string;
  category: string;
}

const { name, description, image, price, category } = Astro.props;
---

<div class="dessert-card" data-category={category}>
  <div class="card-image">
    <img src={image} alt={name} />
    <div class="category-tag">{category}</div>
  </div>
  <div class="card-content">
    <h3>{name}</h3>
    <p class="description">{description}</p>
    <div class="card-footer">
      <span class="price">{price}</span>
      <button class="view-button">View Details</button>
    </div>
  </div>
</div>

<style>
  .dessert-card {
    background-color: var(--color-card-bg);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 4px 16px var(--color-card-shadow);
    transition: all var(--transition-medium);
    animation: fadeIn var(--transition-slow), slideUp var(--transition-slow);
  }
  
  .dessert-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 25px rgba(160, 84, 84, 0.15);
  }
  
  .card-image {
    height: 220px;
    overflow: hidden;
    position: relative;
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-medium);
  }
  
  .dessert-card:hover .card-image img {
    transform: scale(1.05);
  }
  
  .category-tag {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    background-color: var(--color-accent);
    color: white;
    padding: 4px var(--space-1);
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .card-content {
    padding: var(--space-3);
  }
  
  .dessert-card h3 {
    margin-bottom: var(--space-1);
    font-family: var(--font-heading);
    color: var(--color-text-dark);
    font-size: 1.4rem;
  }
  
  .description {
    color: var(--color-text);
    margin-bottom: var(--space-2);
    font-size: 0.95rem;
    line-height: 1.5;
    height: 2.85rem;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: var(--space-2);
  }
  
  .price {
    font-weight: 700;
    color: var(--color-text-dark);
    font-size: 1.2rem;
  }
  
  .view-button {
    background-color: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
    padding: 6px var(--space-2);
    border-radius: var(--radius-md);
    font-weight: 500;
    transition: all var(--transition-fast);
  }
  
  .view-button:hover {
    background-color: var(--color-accent);
    color: white;
  }
  
  @media (max-width: 768px) {
    .card-image {
      height: 180px;
    }
    
    .dessert-card h3 {
      font-size: 1.2rem;
    }
    
    .description {
      font-size: 0.9rem;
    }
  }
</style>